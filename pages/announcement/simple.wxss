/* pages/announcement/simple.wxss */
.name {
    font-size: 45rpx;
    padding: 10rpx 20rpx;
}

.abstract {
    font-size: 36rpx;
    padding: 10rpx 20rpx;
    text-indent: 2rem;
    word-wrap: break-word;
}

.bottom-view {
    border-radius: 15px 15px 0px 0px;
    background: #fff;
    position: fixed;
    bottom: 0;
    width: 100vw;
    padding-top: 25rpx;
    box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.5);
}

.bottom-view .view-btn {
    margin-left: 5vw !important;
    margin: 30rpx auto;
    width: 90vw;
    /* background: linear-gradient(to right, #ff5b5d, #ff552d); */
    animation:bg-color 10s infinite;
    color: #fff;
}

@keyframes bg-color {
    0% {background-color:#e74c3c; }
    20%{background-color:#f1c40f;}
    40%{background-color:#1abc9c;}
    60%{background-color:#3498db;}
    80%{background-color:#9b59b6;}
    100%{background-color:#e74c3c;}
}

.suffix {
    margin: 0.5vh auto;
}

/* 底部广告区域 */
.advertising {
    position: relative;
}

.advertising::after {
    content: "- 广告 -";
    z-index: 100;
    position: absolute;
    top: 0;
    right: 0;
    text-shadow:
        -.025em -.025em 0 #444,
        .025em -.025em 0 #444,
        -.025em .025em 0 #444,
        .025em .025em 0 #444;
    color: #fff;
}

/* 弹出框 */
.tabbar {
    width: 750rpx;
    position: absolute;
    bottom: 0;
}

.tabbar-bg {
    position: fixed;
    top: 0;
    width: 750rpx;
    bottom: 0;
    z-index: 99;
    background: rgba(0, 0, 0, 0.5);
    transform: translateX(-100%);
    transition: all 0s ease 0.3s;
    z-index: 9999999;
}

.tabbar-bg.show {
    transition: all 0s ease 0s;
    transform: translateX(0);
}

.tabbar {
    overflow: hidden;
    border-radius: 20rpx 20rpx 0 0;
    background: #f7f7f7;
    transition: all 0.3s ease 0s;
    transform: translateY(100%);
}

.tabbar-bg.show .tabbar {
    transform: translateY(0);
}

.tabbar view {
    background: #ffffff;
    font-size: 32rpx;
    text-align: center;
    height: 122rpx;
    line-height: 122rpx;
}

.tabbar view button {
    background: none;
    height: 122rpx;
    line-height: 122rpx;
}

.tabbar view.line {
    height: 1px;
    background: #f7f7f7;
}

.tabbar view.cancel {
    border: 0;
    margin-top: 20rpx;
    padding-bottom: 35rpx;
}

/* 联系信息 */
.shareWap {
    width: 95vw;
    padding: 25rpx 0;
    z-index: 99999999999;
    margin: 0 auto;
    height: 130rpx;
    background: #fff;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-direction: row;
    flex-wrap: nowrap;
    border-radius: 10rpx;
    overflow: hidden;
    /* box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.1); */
    animation:box-shadow-color 10s infinite;
    margin-bottom: 30rpx;
}

@keyframes box-shadow-color {
    0% {box-shadow: 0px 0px 12rpx #e74c3c; }
    20%{box-shadow: 0px 0px 12rpx #f1c40f;}
    40%{box-shadow: 0px 0px 12rpx #1abc9c;}
    60%{box-shadow: 0px 0px 12rpx #3498db;}
    80%{box-shadow: 0px 0px 12rpx #9b59b6;}
    100%{box-shadow: 0px 0px 12rpx #e74c3c;}
}


<!--index.wxml-->
<view class="container">
  <view class="zg_box1">


    <view class="zg_anniu">
      <view class="zg_btn" bindtap="jumpad"></view>
    </view>
    <!-- 弹出层 -->
    <view class="zg_mask" hidden='{{showModal}}'>
      <view class="modalDlg">
        <image src="https://www.offcn.com/zg/wltg/gkxxz/zg_pic3.png" class="zg_mask_img"></image>
        <text class="test1">这里有一份国面资料包</text>
        <text class="test2">【专项解读+专项习题集+面试热点时评】</text>
        <button class="zg_confirm" wx:if="{{!phone}}" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber"></button>
        <button wx:else class="zg_confirm" bindtap="yctc1"></button>
        <text class="test3" bindtap="jumpcjcx">>>不用了，谢谢</text>
      </view>
    </view>
    <!-- 弹出层结束 -->

    <!-- 右侧弹窗 -->
    <view class="zg_yctc" bindtap="jump">
      <image src="images/zg_pic1.png" class="zg_yctc_img" />
    </view>
    <!-- 右侧弹窗结束 -->

    <!-- 成功弹窗 -->
    <view class="zg_mask2" hidden='{{showModalcg}}'>
      <view class="modalDlg2">
        <image src="images/zg_pic2.png" class="zg_tc_img2" bindtap="close"></image>
        <text class="zg_mask2_test1">领取成功，您的资料将会在12小时之内给您开通</text>
        <view class="zg_mask2_test1">查看方式：<text>下载中公教育app→登录后点击学习查看</text></view>
       <view class="zg_mask2_box">
          <view class="zg_mask2_test2" bindtap="jumpcjcx">
            <text>{{countDownNum}}</text>s后将自动跳转自国考成绩查询入口
          </view>
       </view>
      </view>
    </view>
    <!-- 成功弹窗结束 -->
  </view>
</view>

<!-- 推广后缀 -->
<view class="suffix">{{suffixStr}}</view>
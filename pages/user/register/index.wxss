.background-circle-blue {
    width: 80vw;
    height: 80vw;
    background: #5d77fa;
    border-radius: 50%;
    position: fixed;
    right: -30vw;
    top: -10vh;
    z-index: -1;
    animation: beat 20s infinite;
}

.background-circle-yellow {
    width: 25vw;
    height: 25vw;
    background: #fec128;
    border-radius: 50%;
    position: fixed;
    right: 30vw;
    top: 15vh;
    z-index: -2;
    animation: beat 10s infinite;
}

.background-circle-green {
    width: 90vw;
    height: 90vw;
    background: #07c160;
    border-radius: 50%;
    position: fixed;
    left: -30vw;
    bottom: -40vw;
    z-index: -1;
    animation: beat 20s infinite;
}

@keyframes beat {
    0% {
        margin: 0;
        scale: 1;
    }
    25% {
        margin: -1vh;
        scale: 1.1;
    }
    50% {
        margin: 0vh;
        scale: 1.2;
    }
    75% {
        margin: 1vh;
        scale: 1.1;
    }
    100% {
        margin: 0;
        scale: 1;
    }
}

